  function showgp(){
    var test = document.getElementById("air");
    function getid (test){
        var opt1;
        for (var i=0, len=test.options.length; i<len; i++){
            opt1= test.options[i];
            if (opt1.selected==true){
                break;
            }
        }
      return opt1;
    }
    var air= getid(test);
    var aii= parseInt(air.value,10)
    var tesb = document.getElementById("bii");
    function getid (tesb){
        var opt2;
        for (var i=0, len=tesb.options.length; i<len; i++){
            opt2= tesb.options[i];
            if (opt2.selected==true){
                break;
            }
        }
      return opt2;
    }
    var bir= getid(tesb);
    var bii=parseInt(bir.value,10);

 var tesc = document.getElementById("cii");
    function getid (tesc){
        var opt3;
        for (var i=0, len=tesc.options.length; i<len; i++){
            opt3= tesc.options[i];
            if (opt3.selected==true){
                break;
            }
        }
      return opt3;
    }
    var cir= getid(tesc)
    var cii=parseInt(cir.value,10);

    var tesd = document.getElementById("dii");
    function getid (tesd){
        var opt4;
        for (var i=0, len=tesd.options.length; i<len; i++){
            opt4= tesd.options[i];
            if (opt4.selected==true){
                break;
            }
        }
      return opt4;
    }
    var dir= getid(tesd)
    var dii=parseInt(dir.value,10); 
    var tese = document.getElementById("eii");
    function getid (tese){
        var opt5;
        for (var i=0, len=tese.options.length; i<len; i++){
            opt5= tese.options[i];
            if (opt5.selected==true){
                break;
            }
        }
      return opt5;
    }
    var eir= getid(tese)
    var eii=parseInt(eir.value, 10); 
    var tesf = document.getElementById("fii");
    function getid (tesf){
        var opt6;
        for (var i=0, len=tesf.options.length; i<len; i++){
            opt6= tesf.options[i];
            if (opt6.selected==true){
                break;
            }
        }
      return opt6;
    }
    var fir= getid(tesf)
    var fii=parseInt(fir.value,10); 
    var tesg = document.getElementById("gii");
    function getid (tesg){
        var opt7;
        for (var i=0, len=tesg.options.length; i<len; i++){
            opt7= tesg.options[i];
            if (opt7.selected==true){
                break;
            }
        }
      return opt7;
    }
    var gir= getid(tesg)
    var gii=parseInt(gir.value,10); 
    var tesh = document.getElementById("hii");
    function getid (tesh){
        var opt8;
        for (var i=0, len=tesh.options.length; i<len; i++){
            opt8= tesh.options[i];
            if (opt8.selected==true){
                break;
            }
        }
      return opt8;
    }
    var hir= getid(tesh)
    var hii=parseInt(hir.value,10); 
    var tas = document.getElementById("ai");
    function getid (tas){
        var opta;
        for (var i=0, len=tas.options.length; i<len; i++){
            opta= tas.options[i];
            if (opta.selected==true){
                break;
            }
        }
      return opta;
    }
    var ar= document.getElementById("aload").innerHTML;
    var ai=parseInt(ar,10);
    var br= document.getElementById("bload").innerHTML;
    var bi=parseInt(br,10);
    var cr= document.getElementById("cload").innerHTML;
    var ci=parseInt(cr,10);
    var dr= document.getElementById("dload").innerHTML;
    var di=parseInt(dr,10);
    var er= document.getElementById("eload").innerHTML;
    var ei=parseInt(er,10);
    var fr= document.getElementById("fload").innerHTML;
    var fi=parseInt(fr,10);
    var gr= document.getElementById("gload").innerHTML;
    var gi=parseInt(gr,10);
    var hr= document.getElementById("hload").innerHTML;
    var hi=parseInt(hr,10);
    
    var acs= aii*ai;
    var bs= bii*bi;
    var cs= cii*ci;
    var ds= dii*di;
    var es= eii*ei;
    var fs= fii*fi;
    var gs= gii*gi;
    var hs= hii*hi;
    var ssum= acs + bs + cs + ds + es + fs + gs + hs;
    var uload= ai + bi + ci + di + ei + fi + gi + hi;
    var GN= ssum /uload;
    var GP= GN.toFixed(5);
    alert("Your GP is "+GP+"")
    document.getElementById("gp").innerHTML=GP;
  }
  function remark(){
    var name= document.getElementById("name").innerHTML=(prompt("What is your name?"));
    var GP= parseFloat(document.getElementById("gp").innerHTML,10);
    var fclas="you have a first class GP, keep it up";
    var sclas="you have a second class upper, go for glory";
    var sclasl="you have a second class lower";
    var tclas=" you have a third class";
    var bad="To be honest, you really didnt do well";
    var genius="You are a genius";
    console.log(GP)
    console.log(typeof(GP))
 if(GP>=4.5 && GP<5){
    alert(""+name+",you have a first class GP, keep it up")
    document.getElementById("remark").innerHTML=fclas;
 }else if (GP>=3.5 && GP<4.5){
    alert(""+name+", you have a second class upper, go for glory");
    document.getElementById("remark").innerHTML=sclas;
 }else if(GP>=2.5 && GP<3.5){
     alert(""+name+", you have a second class lower");
     document.getElementById("remark").innerHTML=sclasl;
 }else if(GP>=1.5 && GP<2.5){
     alert(""+name+", you have a third class");
     document.getElementById("remark").innerHTML=tclas;
 }else if(GP<1.5){
     alert(""+name+", To be honest, you really didnt do well");
     document.getElementById("remark").innerHTML=bad;
 }else if(GP==5){
     alert(""+name+", You are a Genius ")
     document.getElementById("remark").innerHTML=genius;
 }    }
