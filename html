  var one= document.getElementById("a")
   function transa(){
    var one= document.getElementById("a");
      var sel;
      for (var i=0, len=one.options.length; i<len; i++){
          sel= one.options[i];
          if (sel.selected==true){
              break;
          }
      }
      document.getElementById("aload").innerHTML=sel.value;
      console.log(sel);
   }
